<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_soft_blue"
    android:clipToPadding="false"
    android:paddingBottom="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crea tu cuenta"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#111827"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Regístrate para contactar profesionales y gestionar tus servicios."
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:gravity="center"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#E6EEFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFullName"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                    android:hint="Nombre completo"
                    app:startIconDrawable="@drawable/ic_round_person_24"
                    app:startIconTint="#4366CC"
                    app:endIconMode="clear_text"
                    app:counterEnabled="true"
                    app:counterMaxLength="60"
                    app:boxBackgroundColor="#F7F9FC"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:imeOptions="actionNext"
                        android:autofillHints="name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                    android:layout_marginTop="12dp"
                    android:hint="Email"
                    app:startIconDrawable="@drawable/ic_round_mail_24"
                    app:startIconTint="#4366CC"
                    app:helperText="Usa un correo válido (ej. nombre@dominio.com)"
                    app:endIconMode="clear_text"
                    app:boxBackgroundColor="#F7F9FC"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEmailReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress|textNoSuggestions"
                        android:imeOptions="actionNext"
                        android:autofillHints="emailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPhone"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                    android:layout_marginTop="12dp"
                    android:hint="Teléfono"
                    app:startIconDrawable="@drawable/ic_round_call_24"
                    app:startIconTint="#4366CC"
                    app:helperText="Solo números"
                    app:endIconMode="clear_text"
                    app:boxBackgroundColor="#F7F9FC"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:digits="0123456789"
                        android:maxLength="15"
                        android:imeOptions="actionNext"
                        android:autofillHints="phoneNumber"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                    android:layout_marginTop="12dp"
                    android:hint="Contraseña"
                    app:startIconDrawable="@drawable/ic_round_lock_24"
                    app:startIconTint="#4366CC"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#4366CC"
                    app:helperText="Mín. 8, empieza con MAYÚSCULA e incluye minúscula, número y símbolo"
                    app:boxBackgroundColor="#F7F9FC"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPasswordReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"
                        android:autofillHints="password"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRole"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                    android:layout_marginTop="12dp"
                    android:hint="Rol (USER / PROFESSIONAL)"
                    app:startIconDrawable="@drawable/ic_round_person_add_24"
                    app:startIconTint="#4366CC"
                    app:endIconMode="dropdown_menu"
                    app:boxBackgroundColor="#F7F9FC"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/edtRole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textNoSuggestions"
                        android:imeOptions="actionDone"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:alpha="0.35"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Crear cuenta"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#7DA7F1"
                    app:icon="@drawable/ic_round_person_add_24"
                    app:iconTint="@android:color/white"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"/>

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressReg"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:indicatorSize="48dp"
                    app:indicatorColor="#4366CC"
                    app:trackCornerRadius="24dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
